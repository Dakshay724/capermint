<!DOCTYPE html>
<html>
  <head>
    <title>Email Verification</title>
  </head>
  <body>
    <% if (typeof error !== 'undefined') { %>
    <p><%= error %></p>
    <% } %>
    <form action="/verify" method="POST">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
      <button type="submit">Verify</button>
    </form>
  </body>
</html>
